@{
    ViewBag.Title = "Home Page";
}
@model Palace.Website.Controllers.GameInfoModel
<script>
    window.gameId = @Html.Raw(Json.Encode(Model.GameId));
    window.playerName = @Html.Raw(Json.Encode(Model.PlayerName));
    window.getUrl = 'http://localhost:49311/api/game/get/' + window.gameId + '/' + window.playerName;
    window.getRulesUrl = 'http://localhost:49311/api/game/getrules/' + window.gameId;
    window.playInHandCard = 'http://localhost:49311/api/game/playinhandcard/' + window.gameId + '/' + window.playerName;
    window.playFaceUpCard = 'http://localhost:49311/api/game/playfaceupcard/' + window.gameId + '/' + window.playerName;
    window.playFaceDownCard = 'http://localhost:49311/api/game/playfacedowncard/' + window.gameId + '/' + window.playerName;
    window.cannotPlayCard = 'http://localhost:49311/api/game/cannotplaycard/' + window.gameId + '/' + window.playerName;
</script>
<div class="jumbotron">
    <h1>Game</h1>
</div>

<div id="reactContent"></div>

@section Scripts{
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="https://fb.me/react-0.14.2.js"></script>
<script src="https://fb.me/react-dom-0.14.2.js"></script>
@Scripts.Render("~/game")
    }
